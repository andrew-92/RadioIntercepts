<Window x:Class="RadioIntercepts.WpfApp.Views.MessageEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Message Editor" Height="500" Width="400">

    <Window.Resources>
        <!-- Конвертер для Visibility (если нужно, напиши, добавлю C# код) -->
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" VerticalAlignment="Top">
                <!-- Пример поля с Placeholder -->
                <Grid Margin="0,0,0,5">
                    <TextBox x:Name="DateTimeBox"/>
                    <TextBlock Text="DateTime"
                               Foreground="Gray"
                               Margin="5,2,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=DateTimeBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>

                <Grid Margin="0,0,0,5">
                    <TextBox x:Name="FrequencyBox"/>
                    <TextBlock Text="Frequency"
                               Foreground="Gray"
                               Margin="5,2,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=FrequencyBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>

                <Grid Margin="0,0,0,5">
                    <TextBox x:Name="UnitBox"/>
                    <TextBlock Text="Unit"
                               Foreground="Gray"
                               Margin="5,2,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=UnitBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>

                
<Grid Margin="0,0,0,5">
                    <TextBox x:Name="DirectionBox"/>
                    <TextBlock Text="Direction"
                               Foreground="Gray"
                               Margin="5,2,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=DirectionBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>

                <Grid Margin="0,0,0,5">
                    <TextBox x:Name="SenderBox"/>
                    <TextBlock Text="Sender"
                               Foreground="Gray"
                               Margin="5,2,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=SenderBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>

                <Grid Margin="0,0,0,5">
                    <TextBox x:Name="ReceiverBox"/>
                    <TextBlock Text="Receiver"
                               Foreground="Gray"
                               Margin="5,2,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=ReceiverBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>

                <Grid Margin="0,0,0,5">
                    <TextBox x:Name="TextBox" AcceptsReturn="True" Height="100"/>
                    <TextBlock Text="Text"
                               Foreground="Gray"
                               Margin="5,2,0,0"
                               IsHitTestVisible="False"
                               Visibility="{Binding Text.IsEmpty, ElementName=TextBox, Converter={StaticResource BoolToVisibilityConverter}}"/>
                </Grid>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Width="80" Click="Save_Click" Margin="0,0,10,0"/>
                <Button Content="Cancel" Width="80" Click="Cancel_Click"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
