<Window x:Class="RadioIntercepts.WpfApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RadioIntercepts Main" Height="400" Width="300">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Content="Show Messages" Width="200" Height="40" Click="ShowAllMessages_Click" Margin="0,0,0,10"/>
            <Button Content="➕ Add/Edit Message" Width="200" Height="40" Click="AddEditMessage_Click" Margin="0,0,0,10"/>
            <Button Content="📄 Parse Messages" Width="200" Height="40" Click="ParseMessages_Click" Margin="0,0,0,10"/>
            <Button Content="📊 Dashboard" Width="200" Height="40" Click="Dashboard_Click" Margin="0,0,0,10"/>
            <Button Content="📈 Reports" Width="200" Height="40" Click="Reports_Click" Margin="0,0,0,10"/>
            <Button Content="❌ Exit" Width="200" Height="40" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>
