<Window x:Class="RadioIntercepts.WpfApp.Views.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Диаграммы" Height="223" Width="300">

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Button x:Name="CallsignAnalysisButton" 
                Content="Анализ позывного" 
                Width="150" Height="40" Margin="0,0,0,10"
                Click="CallsignAnalysisButton_Click"/>

        <Button x:Name="StatisticsButton" 
                Content="Общая статистика" 
                Width="150" Height="40" Margin="0,0,0,10"
                Click="StatisticsButton_Click"/>

        <Button x:Name="CallsignStatisticsButton" 
                Content="Статистика позывных" 
                Width="150" Height="40" Margin="0,0,0,10"
                Click="CallsignStatisticsButton_Click"/>

        <Button x:Name="CallsignGraphButton" 
                Content="Графы связей позывных" 
                Width="150" Height="40" Margin="0,0,0,10"
                Click="CallsignGraphButton_Click"/>

    </StackPanel>
</Window>