<Window x:Class="RadioIntercepts.WpfApp.Views.CallsignStatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Статистика позывных" Height="700" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Стиль для заголовков -->
        <Style x:Key="SectionHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Стиль для карточек -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Статистика упоминаний позывных" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,15"/>

        <!-- Панель фильтров -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Заголовок фильтров -->
                <TextBlock Grid.Row="0" Text="Фильтры" Style="{StaticResource SectionHeaderStyle}"/>

                <!-- Фильтры -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Дата С -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="Дата С:" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding DateFrom}"
                                    Width="120"/>
                    </StackPanel>

                    <!-- Дата По -->
                    <StackPanel Grid.Column="1" Margin="0,0,10,0">
                        <TextBlock Text="Дата По:" Margin="0,0,0,5"/>
                        <DatePicker SelectedDate="{Binding DateTo}"
                                    Width="120"/>
                    </StackPanel>

                    <!-- Область (Area) -->
                    <StackPanel Grid.Column="2" Margin="0,0,10,0">
                        <TextBlock Text="Область:" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Areas}"
                                  DisplayMemberPath="Name"
                                  SelectedValuePath="Name"
                                  SelectedValue="{Binding SelectedArea}"
                                  Width="150"
                                  IsEditable="True"/>
                    </StackPanel>

                    <!-- Частота (Frequency) -->
                    <StackPanel Grid.Column="3" Margin="0,0,10,0">
                        <TextBlock Text="Частота:" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding Frequencies}"
                                  SelectedItem="{Binding SelectedFrequency}"
                                  Width="150"
                                  IsEditable="True"/>
                    </StackPanel>

                    <!-- Кнопки -->
                    <StackPanel Grid.Column="4" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,0,10,0">
                        <Button Content="Загрузить" 
                                Command="{Binding LoadStatisticsCommand}"
                                Width="100" Margin="0,0,10,0"/>
                        <Button Content="Сбросить" 
                                Command="{Binding ClearFiltersCommand}"
                                Width="100"
                                Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"/>
                    </StackPanel>

                    <!-- Прогресс бар -->
                    <ProgressBar Grid.Column="5" 
                                 IsIndeterminate="True" 
                                 Width="100"
                                 VerticalAlignment="Center"
                                 Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Основное содержимое -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Левая панель: Диаграмма -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,5,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок диаграммы -->
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <TextBlock Text="Распределение позывных" Style="{StaticResource SectionHeaderStyle}"/>
                        <TextBlock Text="{Binding TotalMessagesCount, StringFormat=' (Всего сообщений: {0})'}"
                               FontSize="12" FontStyle="Italic" Foreground="Gray"
                               VerticalAlignment="Bottom" Margin="10,0,0,2"/>
                    </StackPanel>

                    <!-- Круговая диаграмма -->
                    <lvc:PieChart Grid.Row="1" 
                                  Series="{Binding PieChartSeries}"
                                  InnerRadius="100"
                                  LegendLocation="Bottom">
                        <lvc:PieChart.ChartLegend>
                            <lvc:DefaultLegend BulletSize="15"/>
                        </lvc:PieChart.ChartLegend>
                    </lvc:PieChart>

                    <!-- Подсказка -->
                    <TextBlock Grid.Row="2" 
                           Text="Круговая диаграмма показывает распределение позывных по количеству упоминаний"
                           FontStyle="Italic" Foreground="Gray" FontSize="10"
                           HorizontalAlignment="Center" Margin="0,10,0,0"/>
                </Grid>
            </Border>

            <!-- Правая панель: Таблица -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Заголовок таблицы -->
                    <TextBlock Grid.Row="0" Text="Статистика позывных" Style="{StaticResource SectionHeaderStyle}"/>

                    <!-- Таблица статистики -->
                    <DataGrid Grid.Row="1" 
                          ItemsSource="{Binding Statistics}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          CanUserReorderColumns="False"
                          CanUserResizeRows="False"
                          SelectionMode="Single"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled"
                          RowHeight="30">

                        <DataGrid.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                                         Color="#FFE3F2FD"/>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}" 
                                         Color="Black"/>
                        </DataGrid.Resources>

                        <DataGrid.ColumnHeaderStyle>
                            <Style TargetType="DataGridColumnHeader">
                                <Setter Property="Background" Value="#FFF8FAFC"/>
                                <Setter Property="BorderBrush" Value="#FFE2E8F0"/>
                                <Setter Property="BorderThickness" Value="0,0,0,1"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="HorizontalContentAlignment" Value="Left"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                                <Setter Property="Foreground" Value="#FF475569"/>
                            </Style>
                        </DataGrid.ColumnHeaderStyle>

                        <DataGrid.Columns>
                            <!-- Колонка "Позывной" -->
                            <DataGridTextColumn Header="Позывной" 
                                            Binding="{Binding Callsign}"
                                            SortMemberPath="Callsign"
                                            Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Left"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="10,0,0,0"/>
                                        <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Колонка "Процент упоминаний" -->
                            <DataGridTextColumn Header="Процент упоминаний" 
                                            Binding="{Binding PercentageFormatted}"
                                            SortMemberPath="Percentage"
                                            Width="Auto">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="0,0,15,0"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                        <Setter Property="Foreground" Value="#FF059669"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <!-- Колонка "Количество сообщений" (дополнительно) -->
                            <DataGridTextColumn Header="Сообщений" 
                                            Binding="{Binding CountFormatted}"
                                            SortMemberPath="MessageCount"
                                            Width="Auto">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="Padding" Value="0,0,15,0"/>
                                        <Setter Property="Foreground" Value="#FF6B7280"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>

                    <!-- Подсказка -->
                    <TextBlock Grid.Row="2" 
                           Text="Таблица отсортирована по количеству упоминаний (по убыванию)"
                           FontStyle="Italic" Foreground="Gray" FontSize="10"
                           HorizontalAlignment="Right" Margin="0,5,0,0"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>